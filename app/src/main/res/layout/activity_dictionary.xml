<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_dictionary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ravi.ameliorate.activity.Dictionary">



        <LinearLayout
            android:id="@+id/dictionary"

            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:visibility="visible"
            android:layout_alignParentTop="true">

            <android.support.v7.widget.ActionBarContainer
                android:id="@+id/relativeBar"
                android:layout_gravity="center"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="55dp"
                    android:padding="10dp"
                    android:background="@color/bluetext">

                    <ImageView
                        android:id="@+id/back"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:src="@drawable/logos"
                        android:text="Back"
                        android:visibility="visible"
                        android:layout_marginTop="3dp"
                        android:textColor="@color/white"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <ImageView
                        android:id="@+id/share"
                        android:layout_width="30dp"
                        android:layout_height="25dp"
                        android:gravity="center"
                        android:src="@android:drawable/ic_menu_share"
                        android:text="Back"
                        android:visibility="visible"
                        android:layout_marginTop="3dp"
                        android:textColor="@color/white"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginLeft="50dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/app_name2"
                            android:visibility="visible"
                            android:textColor="@color/white"
                            android:fontFamily="sans-serif-black"
                            android:textSize="16dp"
                            />


                    </LinearLayout>


                </RelativeLayout>
            </android.support.v7.widget.ActionBarContainer>

            <android.support.v7.widget.CardView
                android:id="@+id/cardHome5"
                android:layout_below="@+id/relativeBar"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:background="@color/bluetext"
                android:layout_alignParentTop="true">
                <AutoCompleteTextView
                    android:id="@+id/search"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="0.9"
                    android:textSize="16dp"
                    android:padding="6dp"
                    android:fontFamily="sans-serif-light"
                    android:background="#ffffff"
                    android:hint="search..." />

                <ImageView
                    android:id="@+id/voice"
                    android:layout_width="0dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:layout_weight="0.1"
                    android:src="@drawable/voice2" />

                <ImageView
                    android:id="@+id/submit"
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_weight="0.1"
                    android:src="@drawable/googles" />

                </LinearLayout>

            </android.support.v7.widget.CardView>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:background="@mipmap/wordcloud">

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/add"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:visibility="gone"
                    android:layout_margin="@dimen/fab_margin"
                    android:layout_marginBottom="100dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    app:backgroundTint="@android:color/holo_blue_bright"
                    card_view:srcCompat="@android:drawable/ic_menu_edit" />

                <TextView
                    android:id="@+id/link"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="@color/colorAccent" />

            </LinearLayout>

        </LinearLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/driver_button_layout2"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:visibility="visible"
        android:layout_margin="2dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/driver_button_layout22"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:id="@+id/home"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:src="@android:drawable/ic_menu_search"
                        android:layout_margin="5dp"
                        android:checked="false" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:fontFamily="sans-serif-black"
                        android:textColor="@color/bluetext2"
                        android:text="Home" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/recent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:src="@android:drawable/ic_menu_recent_history"
                        android:layout_margin="5dp"
                        android:checked="false" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:fontFamily="sans-serif-black"
                        android:textColor="@color/robotolightblack"
                        android:text="Recent" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/addWords"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:src="@android:drawable/ic_input_add"
                        android:layout_margin="5dp"
                        android:checked="false" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:fontFamily="sans-serif-black"
                        android:textColor="@color/robotolightblack"
                        android:text="Add Words" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/accounts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:layout_margin="6dp"
                        android:checked="false" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:text="Account" />
                </LinearLayout>


            </LinearLayout>


        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>
